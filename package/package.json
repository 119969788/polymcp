{
  "name": "@catalyst-team/poly-mcp",
  "version": "0.1.3",
  "private": false,
  "description": "MCP (Model Context Protocol) server for Polymarket - enables AI agents to interact with prediction markets",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "poly-mcp": "./dist/server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "keywords": [
    "polymarket",
    "mcp",
    "model-context-protocol",
    "ai",
    "prediction-markets",
    "claude",
    "anthropic"
  ],
  "author": "Catalyst Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "ethers": "^5.7.2",
    "@catalyst-team/poly-sdk": "0.4.3",
    "@catalyst-team/smart-money": "0.1.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "ethers": "^5.7.2"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "mcp": "node dist/server.js",
    "mcp:dev": "tsx src/server.ts"
  }
}